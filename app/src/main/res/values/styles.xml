<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- Actionbar color Actionbar的背景色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Status bar color 状态栏背景色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- 各控制元件(如：check box、switch 或是 radiobutton) 被勾选 (checked) 或是选定 (selected) 的颜色 -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Window color App的背景色 -->
        <item name="android:colorBackground">@color/background</item>
        <!--App bar 上的标题与更多菜单中的文字颜色-->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- toolbar的主题 -->
        <item name="toolbarStyle">@style/CustomToolbar</item>
    </style>

    <style name="CustomToolbar" parent="Widget.AppCompat.Toolbar">
        <!-- 设置该属性解决空白部分-->
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>

    <!-- 解决启动时出现白屏问题 -->
    <style name="GuideTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/guide</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- BottomSheetDialog 透明背景色 -->
    <style name="BottomSheetDialogStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="android:colorBackground">@color/transparent</item>
    </style>

