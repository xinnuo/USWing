<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/empty_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:visibility="gone">

    <ImageView
        android:id="@id/empty_img"
        android:layout_width="@dimen/dimen_size_80"
        android:layout_height="@dimen/dimen_size_80"
        android:layout_marginTop="@dimen/dimen_size_100"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@id/empty_hint"
        style="@style/Font15_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_size_20"
        android:padding="@dimen/dimen_size_3" />

</LinearLayout>
