<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_192"
        android:background="@mipmap/bj06">

        <FrameLayout
            android:id="@+id/layout_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_45"
            android:layout_marginTop="@dimen/toolbar_padding_top">

            <TextView
                style="@style/Font18_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dimen_size_60"
                android:layout_marginEnd="@dimen/dimen_size_60"
                android:gravity="center"
                android:text="积分" />

            <TextView
                android:id="@id/tv_nav_right"
                style="@style/Font15_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:onClick="doClick"
                android:padding="10dp"
                android:text="积分规则" />

            <ImageView
                android:id="@id/iv_nav_back"
                android:layout_width="@dimen/dimen_size_90"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:onClick="doClick"
                android:paddingStart="@dimen/dimen_size_0"
                android:paddingTop="@dimen/dimen_size_15"
                android:paddingEnd="@dimen/dimen_size_45"
                android:paddingBottom="@dimen/dimen_size_15"
                android:src="@mipmap/index_icon19"
                tools:ignore="ContentDescription" />

        </FrameLayout>

        <TextView
            android:id="@+id/integral_num"
            style="@style/Font15_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="@dimen/dimen_size_70"
            android:text="0"
            android:textSize="@dimen/sp_size_30" />

        <TextView
            android:id="@+id/integral_sign"
            style="@style/Font13_white"
            android:layout_width="@dimen/dimen_size_70"
            android:layout_height="@dimen/dimen_size_25"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="@dimen/dimen_size_10"
            android:layout_marginBottom="@dimen/dimen_size_25"
            android:background="@mipmap/per_icon06"
            android:gravity="center"
            android:text="签到" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_50"
        android:background="@color/black"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/integral_num1"
                style="@style/Font15_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+5"
                android:textColor="@color/colorControlNormal" />

            <TextView
                android:id="@+id/integral_date1"
                style="@style/Font13_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02/14"
                android:textColor="@color/colorControlNormal" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/divider_height"
            android:layout_height="@dimen/dimen_size_20"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/integral_num2"
                style="@style/Font15_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+5"
                android:textColor="@color/colorControlNormal" />

            <TextView
                android:id="@+id/integral_date2"
                style="@style/Font13_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02/14"
                android:textColor="@color/colorControlNormal" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/divider_height"
            android:layout_height="@dimen/dimen_size_20"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/integral_num3"
                style="@style/Font15_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+5"
                android:textColor="@color/colorControlNormal" />

            <TextView
                android:id="@+id/integral_date3"
                style="@style/Font13_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02/14"
                android:textColor="@color/colorControlNormal" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/divider_height"
            android:layout_height="@dimen/dimen_size_20"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/integral_num4"
                style="@style/Font15_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+5"
                android:textColor="@color/colorControlNormal" />

            <TextView
                android:id="@+id/integral_date4"
                style="@style/Font13_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02/14"
                android:textColor="@color/colorControlNormal" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/divider_height"
            android:layout_height="@dimen/dimen_size_20"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/integral_num5"
                style="@style/Font15_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+5"
                android:textColor="@color/colorControlNormal" />

            <TextView
                android:id="@+id/integral_date5"
                style="@style/Font13_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02/14"
                android:textColor="@color/colorControlNormal" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/divider_height"
            android:layout_height="@dimen/dimen_size_20"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/integral_num6"
                style="@style/Font15_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+5"
                android:textColor="@color/colorControlNormal" />

            <TextView
                android:id="@+id/integral_date6"
                style="@style/Font13_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02/14"
                android:textColor="@color/colorControlNormal" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/divider_height"
            android:layout_height="@dimen/dimen_size_20"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/integral_num7"
                style="@style/Font15_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+5"
                android:textColor="@color/colorControlNormal" />

            <TextView
                android:id="@+id/integral_date7"
                style="@style/Font13_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02/14"
                android:textColor="@color/colorControlNormal" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/integral_tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            app:tabIndicatorColor="@color/red"
            app:tabIndicatorFullWidth="false"
            app:tabMode="fixed"
            app:tabRippleColor="@color/transparent"
            app:tabSelectedTextColor="@color/red"
            app:tabTextAppearance="@style/Font15_black"
            app:tabTextColor="@color/colorAccent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/divider" />

    </LinearLayout>

    <include
        layout="@layout/layout_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingStart="@dimen/dimen_size_15"
        android:paddingTop="@dimen/dimen_size_20"
        android:paddingEnd="@dimen/dimen_size_15"
        android:paddingBottom="@dimen/dimen_size_20">

        <Button
            android:id="@+id/integral_charge"
            style="@style/Font16_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_44"
            android:layout_marginEnd="@dimen/dimen_size_10"
            android:layout_weight="1"
            android:background="@mipmap/bj09"
            android:onClick="doClick"
            android:text="充值" />

        <Button
            android:id="@+id/integral_withdraw"
            style="@style/Font16_gray"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_44"
            android:layout_marginStart="@dimen/dimen_size_10"
            android:layout_weight="1"
            android:background="@mipmap/bj10"
            android:onClick="doClick"
            android:text="提现" />

    </LinearLayout>

</LinearLayout>