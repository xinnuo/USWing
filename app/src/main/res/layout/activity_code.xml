<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_size_35"
        android:layout_marginTop="@dimen/dimen_size_75"
        android:layout_marginEnd="@dimen/dimen_size_35"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/dimen_size_40">

        <com.sunfusheng.GlideImageView
            android:id="@+id/code_img"
            android:layout_width="@dimen/dimen_size_50"
            android:layout_height="@dimen/dimen_size_50"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_logo" />

        <TextView
            android:id="@+id/code_name"
            style="@style/Font18_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_size_10"
            android:text="名称" />

        <ImageView
            android:id="@+id/code_qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_size_20"
            tools:ignore="ContentDescription" />

    </LinearLayout>

</FrameLayout>