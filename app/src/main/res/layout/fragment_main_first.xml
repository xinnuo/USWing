<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.meida.fragment.MainFirstFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_45"
        android:background="@color/white">

        <ImageView
            android:id="@+id/first_scan"
            android:layout_width="@dimen/dimen_size_45"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/dimen_size_13"
            android:src="@mipmap/index_icon01"
            tools:ignore="ContentDescription" />

        <TextView
            style="@style/Font18_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dimen_size_60"
            android:layout_marginEnd="@dimen/dimen_size_60"
            android:gravity="center"
            android:text="首页" />

        <TextView
            android:id="@+id/first_service"
            style="@style/Font15_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:padding="@dimen/dimen_size_10"
            android:text="客服" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider" />

    <include layout="@layout/layout_list" />

</LinearLayout>