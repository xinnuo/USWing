<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <com.jude.rollviewpager.RollPagerView
        android:id="@+id/first_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_195"
        android:background="@color/background"
        app:rollviewpager_hint_gravity="center"
        app:rollviewpager_play_delay="3000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_90">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            tools:ignore="DisableBaselineAlignment">

            <LinearLayout
                android:id="@+id/first_video"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="doClick"
                android:orientation="vertical"
                android:paddingTop="@dimen/dimen_size_15"
                android:paddingBottom="@dimen/dimen_size_15"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_size_22"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/index_icon02"
                    tools:ignore="ContentDescription" />

                <TextView
                    style="@style/Font13_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_size_5"
                    android:text="Magic of frequency" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/first_compare"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="doClick"
                android:orientation="vertical"
                android:paddingTop="@dimen/dimen_size_15"
                android:paddingBottom="@dimen/dimen_size_15"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_size_22"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/index_icon03"
                    tools:ignore="ContentDescription" />

                <TextView
                    style="@style/Font14_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_size_5"
                    android:text="Magic mirror contras" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_size_35"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@mipmap/bj11"
            tools:ignore="ContentDescription" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider" />

</LinearLayout>
