<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_msg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_70"
        android:background="@color/white"
        android:gravity="center_vertical">

        <com.sunfusheng.GlideImageView
            android:id="@+id/item_msg_img"
            android:layout_width="@dimen/dimen_size_50"
            android:layout_height="@dimen/dimen_size_50"
            android:layout_marginStart="@dimen/dimen_size_15"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_size_15"
            android:layout_marginEnd="@dimen/dimen_size_15"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_msg_title"
                    style="@style/Font15_black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="标题" />

                <TextView
                    android:id="@+id/item_msg_time"
                    style="@style/Font13_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_size_10"
                    android:text="时间" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_size_10"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/item_msg_memo"
                    style="@style/Font13_gray"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="备注：" />

                <TextView
                    android:id="@+id/item_msg_status"
                    style="@style/Font13_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_size_10"
                    android:text="已同意" />

                <TextView
                    android:id="@+id/item_msg_agree"
                    style="@style/Font12_white"
                    android:layout_width="@dimen/dimen_size_40"
                    android:layout_height="@dimen/dimen_size_20"
                    android:layout_marginStart="@dimen/dimen_size_10"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:text="同意" />

                <TextView
                    android:id="@+id/item_msg_ignore"
                    style="@style/Font12_white"
                    android:layout_width="@dimen/dimen_size_40"
                    android:layout_height="@dimen/dimen_size_20"
                    android:layout_marginStart="@dimen/dimen_size_10"
                    android:background="@color/gray"
                    android:gravity="center"
                    android:text="忽略" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/item_msg_divider1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginStart="@dimen/dimen_size_15"
        android:layout_marginEnd="@dimen/dimen_size_15"
        android:background="@color/divider" />

    <View
        android:id="@+id/item_msg_divider2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider"
        android:visibility="gone" />

</LinearLayout>