<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_size_15"
        android:layout_marginEnd="@dimen/dimen_size_15"
        android:background="@color/white"
        android:gravity="center"
        android:paddingTop="@dimen/dimen_size_15">

        <ImageView
            android:layout_width="@dimen/dimen_size_35"
            android:layout_height="@dimen/dimen_size_2"
            android:src="@mipmap/bj13"
            tools:ignore="ContentDescription" />

        <TextView
            style="@style/Font14_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_size_10"
            android:layout_marginEnd="@dimen/dimen_size_10"
            android:text="分享到" />

        <ImageView
            android:layout_width="@dimen/dimen_size_35"
            android:layout_height="@dimen/dimen_size_2"
            android:src="@mipmap/bj14"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_size_15"
        android:layout_marginEnd="@dimen/dimen_size_15"
        android:layout_marginBottom="@dimen/dimen_size_15"
        android:paddingStart="@dimen/dimen_size_10"
        android:paddingEnd="@dimen/dimen_size_10"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/dialog_share_qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="doClick"
            android:orientation="vertical"
            android:paddingTop="@dimen/dimen_size_15"
            android:paddingBottom="@dimen/dimen_size_15">

            <ImageView
                android:layout_width="@dimen/dimen_size_40"
                android:layout_height="@dimen/dimen_size_40"
                android:src="@mipmap/share_icon01"
                tools:ignore="ContentDescription" />

            <TextView
                style="@style/Font13_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_size_10"
                android:text="QQ" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_share_wechat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="doClick"
            android:orientation="vertical"
            android:paddingTop="@dimen/dimen_size_15"
            android:paddingBottom="@dimen/dimen_size_15">

            <ImageView
                android:layout_width="@dimen/dimen_size_40"
                android:layout_height="@dimen/dimen_size_40"
                android:src="@mipmap/share_icon02"
                tools:ignore="ContentDescription" />

            <TextView
                style="@style/Font13_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_size_10"
                android:text="微信" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_share_circle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="doClick"
            android:orientation="vertical"
            android:paddingTop="@dimen/dimen_size_15"
            android:paddingBottom="@dimen/dimen_size_15">

            <ImageView
                android:layout_width="@dimen/dimen_size_40"
                android:layout_height="@dimen/dimen_size_40"
                android:src="@mipmap/share_icon03"
                tools:ignore="ContentDescription" />

            <TextView
                style="@style/Font13_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_size_10"
                android:text="朋友圈" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_share_sina"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="doClick"
            android:orientation="vertical"
            android:paddingTop="@dimen/dimen_size_15"
            android:visibility="gone"
            android:paddingBottom="@dimen/dimen_size_15">

            <ImageView
                android:layout_width="@dimen/dimen_size_40"
                android:layout_height="@dimen/dimen_size_40"
                android:src="@mipmap/share_icon04"
                tools:ignore="ContentDescription" />

            <TextView
                style="@style/Font13_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_size_10"
                android:text="新浪微博" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_share_answer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="doClick"
            android:orientation="vertical"
            android:paddingTop="@dimen/dimen_size_15"
            android:paddingBottom="@dimen/dimen_size_15">

            <ImageView
                android:layout_width="@dimen/dimen_size_40"
                android:layout_height="@dimen/dimen_size_40"
                android:src="@mipmap/share_icon05"
                tools:ignore="ContentDescription" />

            <TextView
                style="@style/Font13_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_size_10"
                android:text="问答" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_share_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="doClick"
            android:orientation="vertical"
            android:paddingTop="@dimen/dimen_size_15"
            android:paddingBottom="@dimen/dimen_size_15">

            <ImageView
                android:layout_width="@dimen/dimen_size_40"
                android:layout_height="@dimen/dimen_size_40"
                android:src="@mipmap/share_icon06"
                tools:ignore="ContentDescription" />

            <TextView
                style="@style/Font13_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_size_10"
                android:text="教练点评" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/dialog_share_cancel"
        style="@style/Font15_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_40"
        android:layout_marginStart="@dimen/dimen_size_15"
        android:layout_marginEnd="@dimen/dimen_size_15"
        android:layout_marginBottom="@dimen/dimen_size_20"
        android:background="@color/white"
        android:onClick="doClick"
        android:text="取消" />

</LinearLayout>